{
  "name": "kf-packages",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "main": "es/engine/index.js",
  "scripts": {
    "build:js": "lerna exec --parallel --ignore bs- 'babel src --config babel.web.config.js --root-mode upward --out-dir dist --delete-dir-on-start --no-comments'",
    "build:bs": "lerna exec --parallel --scope bs-* 'yarn build'",
    "build": "yarn build:bs & yarn build:js",
    "start:js": "nodemon --ignore **/dist/** --ext js --exec 'yarn build:bs'",
    "start:bs": "nodemon --ignore **/dist/** --ext js --exec 'yarn build:js'",
    "start": "nodemon --ignore **/dist/** --ext js,re --exec 'yarn build'",
    "build:prod": "BABEL_ENV=production yarn build",
    "test": "jest --testPathIgnorePatterns lib/js/*",
    "lint": "eslint --ignore-path .gitignore ./packages"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "pixi.js": "4.8.6",
    "ramda": "^0.25.0",
    "rxjs": "6"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@glennsl/bs-jest": "^0.4.8",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-node": "^0.3.1",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-emotion": "^10.0.7",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-promise": "^3.8.0",
    "lerna": "^3.14.1"
  },
  "jest": {
    "testURL": "http://localhost/",
    "transform": {
      "lib/es6/*": "./babel-jest-wrapper.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@glennsl/bs-jest|bs-platform).+\\.js$"
    ],
    "verbose": true
  }
}
